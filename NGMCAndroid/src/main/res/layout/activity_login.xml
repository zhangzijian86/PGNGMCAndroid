<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/activity_bg_color">

    <ImageView
        android:id="@+id/logo"
        android:layout_marginTop="60dip"
        android:layout_centerHorizontal="true"
        android:layout_height="80dip"
        android:layout_width="80dip"
        android:background="@mipmap/yonghutouxiang_yuan"
        />

    <TextView
        android:id="@+id/logotitle"
        android:layout_below="@id/logo"
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#FD7A5C"
        />

    <RelativeLayout android:id="@+id/input"
        android:layout_width="fill_parent"
        android:layout_marginTop="25dip"
        android:layout_height="150dip"
        android:layout_below="@id/logotitle" >
        <EditText
            android:id="@+id/shoujihaoma"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:hint="输入手机号"
            android:textColorHint="#c2c2c2"
            android:textCursorDrawable="@color/editText_color"
            android:layout_marginTop="4dip"
            android:layout_marginBottom="4dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:textSize="18sp"
            android:background="@null"
            />
        <ImageView
            android:id="@+id/xian1"
            android:layout_below="@id/shoujihaoma"
            android:layout_marginTop="0dip"
            android:layout_marginRight="25dip"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="25dip"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@mipmap/xian"
            />
    </RelativeLayout>

</RelativeLayout>